<section class="newsletter-section animate-on-scroll animate-fade-up">
  <div class="container">
    <div class="newsletter">
      <div class="newsletter__content">
        <h2 class="newsletter__title">{{ section.settings.title | default: 'Bültene Katılın' }}</h2>
        <p class="newsletter__description">{{ section.settings.description | default: 'En yeni ürünler ve özel tekliflerden haberdar olun.' }}</p>
      </div>
      
      <form class="newsletter__form" data-newsletter-form>
        <div class="newsletter__input-wrapper">
          <input 
            type="email" 
            name="email" 
            placeholder="{{ section.settings.placeholder | default: 'E-posta adresiniz' }}" 
            required
            class="newsletter__input"
          >
          <button type="submit" class="button button--primary newsletter__submit">
            {{ section.settings.button_text | default: 'Kayıt Ol' }}
          </button>
        </div>
        <p class="newsletter__privacy">
          {{ section.settings.privacy_text | default: 'Gizlilik politikamızı okuyup kabul ediyorum.' }}
        </p>
      </form>
    </div>
  </div>
</section>

<style>
  .newsletter-section {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, #0052a3 100%);
    color: white;
  }

  .newsletter {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter__title {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
    color: white;
  }

  .newsletter__description {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-lg);
    opacity: 0.9;
  }

  .newsletter__input-wrapper {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .newsletter__input {
    flex: 1;
    padding: var(--spacing-sm) var(--spacing-md);
    border: none;
    border-radius: 8px;
    font-size: 1rem;
  }

  .newsletter__submit {
    white-space: nowrap;
    background: var(--color-secondary);
  }

  .newsletter__submit:hover {
    background: #222;
  }

  .newsletter__privacy {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0;
  }

  @media (max-width: 768px) {
    .newsletter__input-wrapper {
      flex-direction: column;
    }

    .newsletter__submit {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Bülten",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Başlık",
      "default": "Bültene Katılın"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Açıklama",
      "default": "En yeni ürünler ve özel tekliflerden haberdar olun."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input Placeholder",
      "default": "E-posta adresiniz"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Buton Metni",
      "default": "Kayıt Ol"
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Gizlilik Metni",
      "default": "Gizlilik politikamızı okuyup kabul ediyorum."
    }
  ],
  "presets": [
    {
      "name": "Bülten"
    }
  ]
}
{% endschema %}

